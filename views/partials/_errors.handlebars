{{#if errors}}
    <div class="row justify-content-center">
        <div class="col-md-12 my-3">
            {{#each errors}}
                <div class="alert alert-danger">
                    {{error_msg}}
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}
{{#if error}}
    <div class="row justify-content-center">
        <div class="col-md-12 my-3">
            <div class="alert alert-danger">
                {{error}}
            </div>
        </div>
    </div>
{{/if}}